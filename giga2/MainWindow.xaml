<Window x:Class="giga2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:giga2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="tbUserInput" 
                     Text="Gdfkfkfkfkf fkfkfkfkf fkfkfkfkfkf"
                     FontFamily="Montseratt"
                     FontSize="30"
                     Margin="20"
                     TextWrapping="Wrap"/>
        </ScrollViewer>

        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="tbAnswer"
                       FontFamily="Montseratt"
                        FontSize="30"
                        Margin="20"
                        TextWrapping="Wrap"/>
        </ScrollViewer>
        <Button Click="btnSendMessage_Click" Grid.Row="2" Content="Оправить" FontSize="30"/>
    </Grid>
</Window>
